<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="no.tornado.dyndns.controller.MainController">
    <center>
        <BorderPane prefHeight="10.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <center>
                <TableView fx:id="recordsView" BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn fx:id="nameCol" text="Name"/>
                        <TableColumn fx:id="contentCol" prefWidth="147.0" text="IP"/>
                        <TableColumn fx:id="statusCol" prefWidth="75.0" text="Status"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </center>
            <bottom>
                <ToolBar minHeight="40.0" prefHeight="40.0" BorderPane.alignment="CENTER">
                    <items>
                        <Button fx:id="addRecord" mnemonicParsing="false" onAction="#onAddRecord" text="+"/>
                        <Button fx:id="deleteRecord" mnemonicParsing="false" onAction="#onDeleteRecord" text="-"/>
                        <Button fx:id="editRecord" mnemonicParsing="false" onAction="#onEditRecord" text="Edit"/>
                        <TextField fx:id="quickAddInput" alignment="TOP_LEFT" prefWidth="300.0" HBox.hgrow="SOMETIMES"/>
                        <Button mnemonicParsing="false" onAction="#onQuickAdd" text="Quick add"/>
                        <Pane HBox.hgrow="ALWAYS"/>
                        <Button mnemonicParsing="false" onAction="#onRefresh" text="Refresh"/>
                    </items>
                </ToolBar>
            </bottom>
        </BorderPane>
    </center>
</BorderPane>
